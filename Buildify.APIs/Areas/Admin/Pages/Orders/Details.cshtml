@page "{id:int}"
@model Buildify.APIs.Areas.Admin.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Orders">Orders</a></li>
                    <li class="breadcrumb-item active">Order Details #@Model.Id</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4">
                        <i class="bi bi-receipt"></i> Order #@Model.Id
                    </h1>
                    <p class="text-muted">View detailed order information</p>
                </div>
                <div>
                    <a href="/Admin/Orders" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back to Orders
                    </a>
                    @if (Model.Order != null && Model.Order.Status != "Delivered" && Model.Order.Status != "Cancelled")
                    {
                        <a href="/Admin/Orders/UpdateStatus/@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Update Status
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>Error!</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Order != null)
    {
        <div class="row">
            <!-- Order Information -->
            <div class="col-lg-8">
                <!-- Order Status Card -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless mb-0">
                                    <tbody>
                                        <tr>
                                            <th style="width: 150px;"><i class="bi bi-hash"></i> Order ID:</th>
                                            <td><strong class="fs-5">#@Model.Order.Id</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-calendar-check"></i> Order Date:</th>
                                            <td>
                                                @Model.Order.OrderDate.ToString("MMMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@Model.Order.OrderDate.ToString("hh:mm tt")</small>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-person"></i> Customer ID:</th>
                                            <td>@Model.Order.UserId</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless mb-0">
                                    <tbody>
                                        <tr>
                                            <th style="width: 150px;"><i class="bi bi-circle-fill"></i> Status:</th>
                                            <td>
                                                @{
                                                    var badgeClass = Model.Order.Status switch
                                                    {
                                                        "Pending" => "bg-warning",
                                                        "Processing" => "bg-info",
                                                        "Shipped" => "bg-primary",
                                                        "Delivered" => "bg-success",
                                                        "Cancelled" => "bg-danger",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass fs-6">
                                                    <i class="bi bi-circle-fill"></i> @Model.Order.Status
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-currency-dollar"></i> Total Price:</th>
                                            <td><strong class="text-success fs-4">$@Model.Order.TotalPrice.ToString("N2")</strong></td>
                                        </tr>
                                        @if (Model.Order.UpdatedDate.HasValue)
                                        {
                                            <tr>
                                                <th><i class="bi bi-clock-history"></i> Last Updated:</th>
                                                <td>
                                                    @Model.Order.UpdatedDate.Value.ToString("MMM dd, yyyy")
                                                    <br>
                                                    <small class="text-muted">@Model.Order.UpdatedDate.Value.ToString("hh:mm tt")</small>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Items Card -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam"></i> Order Items
                            <span class="badge bg-light text-dark ms-2">@Model.Order.OrderItems.Count item(s)</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Order.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ProductImageUrl))
                                                    {
                                                        <img src="@item.ProductImageUrl" alt="@item.ProductName" class="me-3" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; border-radius: 4px;">
                                                            <i class="bi bi-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <strong>@item.ProductName</strong>
                                                        <br>
                                                        <small class="text-muted">Product ID: @item.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <strong>$@item.Price.ToString("N2")</strong>
                                            </td>
                                            <td class="align-middle">
                                                <span class="badge bg-secondary">@item.Quantity</span>
                                            </td>
                                            <td class="align-middle">
                                                <strong class="text-success">$@item.Subtotal.ToString("N2")</strong>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td><strong class="text-success fs-5">$@Model.Order.TotalPrice.ToString("N2")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Shipping Information -->
            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-truck"></i> Shipping Address</h5>
                    </div>
                    <div class="card-body">
                        <address class="mb-0">
                            <strong>@Model.Order.ShippingAddress.FirstName @Model.Order.ShippingAddress.LastName</strong><br>
                            @Model.Order.ShippingAddress.Street<br>
                            @Model.Order.ShippingAddress.City, @Model.Order.ShippingAddress.State @Model.Order.ShippingAddress.ZipCode<br>
                            @Model.Order.ShippingAddress.Country
                        </address>
                    </div>
                </div>

                <!-- Order Timeline -->
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Order Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item @(Model.Order.Status == "Pending" || Model.Order.Status == "Processing" || Model.Order.Status == "Shipped" || Model.Order.Status == "Delivered" ? "active" : "")">
                                <i class="bi bi-circle-fill"></i>
                                <div class="timeline-content">
                                    <h6>Order Placed</h6>
                                    <small>@Model.Order.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</small>
                                </div>
                            </div>
                            <div class="timeline-item @(Model.Order.Status == "Processing" || Model.Order.Status == "Shipped" || Model.Order.Status == "Delivered" ? "active" : "")">
                                <i class="bi bi-circle-fill"></i>
                                <div class="timeline-content">
                                    <h6>Processing</h6>
                                    <small>@(Model.Order.Status == "Processing" || Model.Order.Status == "Shipped" || Model.Order.Status == "Delivered" ? "In Progress" : "Pending")</small>
                                </div>
                            </div>
                            <div class="timeline-item @(Model.Order.Status == "Shipped" || Model.Order.Status == "Delivered" ? "active" : "")">
                                <i class="bi bi-circle-fill"></i>
                                <div class="timeline-content">
                                    <h6>Shipped</h6>
                                    <small>@(Model.Order.Status == "Shipped" || Model.Order.Status == "Delivered" ? "On the way" : "Pending")</small>
                                </div>
                            </div>
                            <div class="timeline-item @(Model.Order.Status == "Delivered" ? "active" : "")">
                                <i class="bi bi-circle-fill"></i>
                                <div class="timeline-content">
                                    <h6>Delivered</h6>
                                    <small>@(Model.Order.Status == "Delivered" ? "Completed" : "Pending")</small>
                                </div>
                            </div>
                            @if (Model.Order.Status == "Cancelled")
                            {
                                <div class="timeline-item active text-danger">
                                    <i class="bi bi-x-circle-fill"></i>
                                    <div class="timeline-content">
                                        <h6>Cancelled</h6>
                                        <small>Order was cancelled</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                @if (Model.Order.Status != "Delivered" && Model.Order.Status != "Cancelled")
                {
                    <div class="card mt-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <a href="/Admin/Orders/UpdateStatus/@Model.Id" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-pencil"></i> Update Order Status
                            </a>
                            <a href="/Admin/Orders" class="btn btn-secondary w-100">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading order details...</p>
        </div>
    }
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
        opacity: 0.5;
    }
    
    .timeline-item.active {
        opacity: 1;
    }
    
    .timeline-item:before {
        content: '';
        position: absolute;
        left: -22px;
        top: 8px;
        bottom: -12px;
        width: 2px;
        background: #dee2e6;
    }
    
    .timeline-item:last-child:before {
        display: none;
    }
    
    .timeline-item i {
        position: absolute;
        left: -27px;
        top: 4px;
        font-size: 12px;
        color: #6c757d;
    }
    
    .timeline-item.active i {
        color: #0d6efd;
    }
    
    .timeline-content h6 {
        margin-bottom: 2px;
        font-size: 14px;
    }
    
    .timeline-content small {
        color: #6c757d;
        font-size: 12px;
    }
</style>
