@page "{id:int}"
@using Buildify.Core.Entities
@model Buildify.APIs.Areas.Admin.Pages.Orders.UpdateStatusModel
@{
    ViewData["Title"] = "Update Order Status";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Orders">Orders</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Orders/Details/@Model.Id">Order #@Model.Id</a></li>
                    <li class="breadcrumb-item active">Update Status</li>
                </ol>
            </nav>
            <h1 class="display-4">
                <i class="bi bi-arrow-repeat"></i> Update Order Status
            </h1>
            <p class="text-muted">Change the status of order #@Model.Id</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>Error!</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Order != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Update Status</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <!-- Current Order Info -->
                            <div class="alert alert-info">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Order ID:</strong> #@Model.Order.Id<br>
                                        <strong>Customer:</strong> @Model.Order.ShippingAddress.FirstName @Model.Order.ShippingAddress.LastName<br>
                                        <strong>Order Date:</strong> @Model.Order.OrderDate.ToString("MMM dd, yyyy")
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Total:</strong> <span class="text-success">$@Model.Order.TotalPrice.ToString("N2")</span><br>
                                        <strong>Items:</strong> @Model.Order.OrderItems.Count item(s)<br>
                                        <strong>Current Status:</strong> 
                                        @{
                                            var currentBadgeClass = Model.Order.Status switch
                                            {
                                                "Pending" => "bg-warning",
                                                "Processing" => "bg-info",
                                                "Shipped" => "bg-primary",
                                                "Delivered" => "bg-success",
                                                "Cancelled" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @currentBadgeClass">@Model.Order.Status</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Status Selection -->
                            <div class="mb-4">
                                <label asp-for="NewStatus" class="form-label fs-5">
                                    <i class="bi bi-circle-fill"></i> Select New Status <span class="text-danger">*</span>
                                </label>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-check form-check-card">
                                            <input class="form-check-input" type="radio" asp-for="NewStatus" value="@OrderStatus.Pending" id="statusPending">
                                            <label class="form-check-label w-100" for="statusPending">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="status-icon bg-warning text-dark me-3">
                                                                <i class="bi bi-clock"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">Pending</h6>
                                                                <small class="text-muted">Order received, awaiting processing</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-check-card">
                                            <input class="form-check-input" type="radio" asp-for="NewStatus" value="@OrderStatus.Processing" id="statusProcessing">
                                            <label class="form-check-label w-100" for="statusProcessing">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="status-icon bg-info text-white me-3">
                                                                <i class="bi bi-gear"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">Processing</h6>
                                                                <small class="text-muted">Order is being prepared</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-check-card">
                                            <input class="form-check-input" type="radio" asp-for="NewStatus" value="@OrderStatus.Shipped" id="statusShipped">
                                            <label class="form-check-label w-100" for="statusShipped">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="status-icon bg-primary text-white me-3">
                                                                <i class="bi bi-truck"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">Shipped</h6>
                                                                <small class="text-muted">Order is on the way</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-check-card">
                                            <input class="form-check-input" type="radio" asp-for="NewStatus" value="@OrderStatus.Delivered" id="statusDelivered">
                                            <label class="form-check-label w-100" for="statusDelivered">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="status-icon bg-success text-white me-3">
                                                                <i class="bi bi-check-circle"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">Delivered</h6>
                                                                <small class="text-muted">Order successfully delivered</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-check form-check-card">
                                            <input class="form-check-input" type="radio" asp-for="NewStatus" value="@OrderStatus.Cancelled" id="statusCancelled">
                                            <label class="form-check-label w-100" for="statusCancelled">
                                                <div class="card">
                                                    <div class="card-body">
                                                        <div class="d-flex align-items-center">
                                                            <div class="status-icon bg-danger text-white me-3">
                                                                <i class="bi bi-x-circle"></i>
                                                            </div>
                                                            <div>
                                                                <h6 class="mb-0">Cancelled</h6>
                                                                <small class="text-muted">Order was cancelled</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="NewStatus" class="text-danger"></span>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="/Admin/Orders/Details/@Model.Id" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save"></i> Update Status
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Status Workflow</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">Typical order workflow:</p>
                        <ol class="mb-0">
                            <li class="mb-2">
                                <span class="badge bg-warning">Pending</span>
                                <br><small class="text-muted">Order placed by customer</small>
                            </li>
                            <li class="mb-2">
                                <span class="badge bg-info">Processing</span>
                                <br><small class="text-muted">Preparing items for shipment</small>
                            </li>
                            <li class="mb-2">
                                <span class="badge bg-primary">Shipped</span>
                                <br><small class="text-muted">Order dispatched to customer</small>
                            </li>
                            <li class="mb-2">
                                <span class="badge bg-success">Delivered</span>
                                <br><small class="text-muted">Order received by customer</small>
                            </li>
                        </ol>
                        <hr>
                        <p class="mb-0">
                            <span class="badge bg-danger">Cancelled</span>
                            <br><small class="text-muted">Use when order needs to be cancelled at any stage</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .form-check-card {
        position: relative;
    }
    
    .form-check-card .form-check-input {
        position: absolute;
        opacity: 0;
    }
    
    .form-check-card .card {
        cursor: pointer;
        transition: all 0.3s;
        border: 2px solid #dee2e6;
    }
    
    .form-check-card .form-check-input:checked + label .card {
        border-color: #0d6efd;
        background-color: #f0f7ff;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
    
    .form-check-card .card:hover {
        border-color: #0d6efd;
    }
    
    .status-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 1.5rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
