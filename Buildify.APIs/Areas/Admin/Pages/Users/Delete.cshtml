@page "{id}"
@model Buildify.APIs.Areas.Admin.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Users">Users</a></li>
                    <li class="breadcrumb-item active">Delete User</li>
                </ol>
            </nav>
            <h1 class="display-5 text-danger">
                <i class="bi bi-exclamation-triangle"></i> Delete User
            </h1>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.User != null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-exclamation-octagon"></i> Confirm Deletion
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Warning!</strong> This action cannot be undone.
                        </div>

                        <h5 class="mb-3">Are you sure you want to delete this user?</h5>

                        <div class="user-info mb-4">
                            <div class="mb-2">
                                <strong>Display Name:</strong> @(Model.User.DisplayName ?? "N/A")
                            </div>
                            <div class="mb-2">
                                <strong>Email:</strong> @Model.User.Email
                            </div>
                            <div class="mb-2">
                                <strong>Phone:</strong> @(Model.User.PhoneNumber ?? "N/A")
                            </div>
                            <div class="mb-2">
                                <strong>Registered:</strong> @Model.User.DateCreated.ToString("MMMM dd, yyyy")
                            </div>
                        </div>

                        <div class="bg-light p-3 rounded mb-3">
                            <h6 class="text-danger">The following data will be permanently deleted:</h6>
                            <ul class="mb-0">
                                <li>User account and profile information</li>
                                <li>All saved addresses</li>
                                <li>Order history and related data</li>
                                <li>Shopping cart items</li>
                                <li>All associated records</li>
                            </ul>
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="User.Id" />
                            <div class="d-flex justify-content-between">
                                <a href="/Admin/Users" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete User
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
