@page
@model Buildify.APIs.Areas.Admin.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Admin Login";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="text-center mb-4">
            <i class="bi bi-building login-icon"></i>
            <h2 class="fw-bold">Buildify Admin</h2>
            <p class="text-muted">Sign in to continue to dashboard</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">
                    <i class="bi bi-envelope"></i> Email Address
                </label>
                <input asp-for="Input.Email" 
                       class="form-control form-control-lg" 
                       placeholder="admin@example.com"
                       autofocus />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">
                    <i class="bi bi-lock"></i> Password
                </label>
                <input asp-for="Input.Password" 
                       class="form-control form-control-lg" 
                       placeholder="Enter your password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" 
                       class="form-check-input" 
                       type="checkbox" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                    Remember me for 30 days
                </label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </button>
            </div>

            <div class="text-center text-muted">
                <small>
                    <i class="bi bi-shield-check"></i> 
                    Secure login with encrypted credentials
                </small>
            </div>
        </form>

        <hr class="my-4">

        <div class="text-center">
            <p class="text-muted mb-2">
                <i class="bi bi-info-circle"></i> Default Admin Credentials:
            </p>
            <div class="credential-box">
                <small>
                    <strong>Email:</strong> admin@example.com<br>
                    <strong>Password:</strong> Admin@123
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
