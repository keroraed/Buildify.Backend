@page "{id:int}"
@model Buildify.APIs.Areas.Admin.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Products">Products</a></li>
                    <li class="breadcrumb-item active">Delete Product #@Model.Id</li>
                </ol>
            </nav>
            <h1 class="display-4 text-danger">
                <i class="bi bi-trash"></i> Delete Product
            </h1>
            <p class="text-muted">Confirm product deletion</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> <strong>Error!</strong> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <!-- Warning Alert -->
                <div class="alert alert-warning border-warning" role="alert">
                    <h4 class="alert-heading">
                        <i class="bi bi-exclamation-triangle-fill"></i> Warning!
                    </h4>
                    <p>You are about to permanently delete this product. This action cannot be undone.</p>
                    <hr>
                    <p class="mb-0">Please review the product details below before confirming the deletion.</p>
                </div>

                <!-- Product Details Card -->
                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Product to be Deleted</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                            {
                                <div class="col-md-4 text-center mb-3">
                                    <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;">
                                </div>
                            }
                            <div class="@(!string.IsNullOrEmpty(Model.Product.ImageUrl) ? "col-md-8" : "col-12")">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <th style="width: 150px;"><i class="bi bi-hash"></i> ID:</th>
                                            <td><strong>#@Model.Product.Id</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-tag"></i> Name:</th>
                                            <td><strong class="fs-5">@Model.Product.Name</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-card-text"></i> Description:</th>
                                            <td>
                                                @if (!string.IsNullOrEmpty(Model.Product.Description))
                                                {
                                                    @Model.Product.Description
                                                }
                                                else
                                                {
                                                    <em class="text-muted">No description</em>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-currency-dollar"></i> Price:</th>
                                            <td><strong class="text-success">$@Model.Product.Price.ToString("N2")</strong></td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-grid"></i> Category:</th>
                                            <td><span class="badge bg-secondary">@Model.Product.CategoryName</span></td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-box-seam"></i> Stock:</th>
                                            <td>
                                                <strong class="@(Model.Product.Stock <= 10 ? (Model.Product.Stock == 0 ? "text-danger" : "text-warning") : "text-success")">
                                                    @Model.Product.Stock units
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th><i class="bi bi-calendar-plus"></i> Created:</th>
                                            <td>@Model.Product.CreatedDate.ToString("MMMM dd, yyyy")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Confirmation Card -->
                <div class="card mt-3 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0"><i class="bi bi-question-circle"></i> Confirm Deletion</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-3">
                            Are you absolutely sure you want to delete <strong>"@Model.Product.Name"</strong>?
                        </p>
                        <form method="post">
                            <div class="d-flex justify-content-between">
                                <a href="/Admin/Products" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Yes, Delete Product
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="alert alert-info mt-3" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Note:</strong> After deletion, you can go back to the products list or create a new product.
                </div>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading product details...</p>
        </div>
    }
</div>
